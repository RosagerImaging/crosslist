{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "remoteCache": {
    "signature": false
  },
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "version-packages": {
      "outputs": ["packages/*/package.json", "apps/*/package.json"]
    },
    "install:api": {
      "run": "cd apps/api && poetry install",
      "outputs": ["apps/api/.venv/**"]
    },
    "lint:api": {
      "run": "cd apps/api && poetry run ruff check ."
    },
    "test:api": {
      "run": "cd apps/api && poetry run pytest"
    },
    "dev:api": {
      "run": "cd apps/api && poetry run uvicorn main:app --reload",
      "cache": false,
      "persistent": true
    },
    "generate:api-client": {
      "dependsOn": ["dev:api"],
      "run": "openapi-typescript-codegen --input http://localhost:8000/openapi.json --output packages/api-client/src --client axios"
    },
    "build:chrome": {
      "dependsOn": ["^build"],
      "run": "cd apps/chrome-extension && vite build && node scripts/zip-extension.js",
      "outputs": ["apps/chrome-extension/dist/**", "apps/chrome-extension/extension.zip"]
    }
  }
}
