{
  "name": "crosslist",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build && npm run sentry:sourcemaps",
    "dev": "turbo run dev",
    "lint": "eslint \"apps/**/*.{ts,tsx}\" --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "version-packages": "changeset version",
    "publish-packages": "npx turbo run build && changeset publish",
    "generate-changeset": "node scripts/generate-changeset-summary.js",
    "prepare": "husky",
    "install:api": "cd apps/api && poetry install",
    "lint:api": "cd apps/api && poetry run ruff check .",
    "test:api": "cd apps/api && poetry run pytest",
    "dev:api": "cd apps/api && poetry run uvicorn main:app --reload",
    "generate:api-client": "openapi-typescript-codegen --input http://localhost:8000/openapi.json --output packages/api-client/src --client axios",
    "db:types": "supabase gen types typescript --local > apps/web/types/supabase.ts",
    "build:chrome": "cd apps/chrome-extension && vite build && cp -r icons dist/",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org netpost --project crosslist-frontend apps/web/.next/ && sentry-cli sourcemaps upload --org netpost --project crosslist-frontend apps/web/.next/"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@next/eslint-plugin-next": "^16.0.7",
    "@types/chrome": "^0.1.32",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-turbo": "^1.13.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "^3.6.2",
    "prompts": "^2.4.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-web-extension": "^4.5.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix --max-warnings 0",
    "*.{ts,tsx,md}": "prettier --write"
  },
  "dependencies": {
    "@sentry/cli": "^2.58.4",
    "@sentry/nextjs": "^10.32.1",
    "@sentry/vite-plugin": "^4.6.1",
    "uuid": "^13.0.0"
  }
}
