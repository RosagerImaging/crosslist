{
  "name": "crosslist",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "version-packages": "changeset version",
    "publish-packages": "npx turbo run build && changeset publish",
    "generate-changeset": "node scripts/generate-changeset-summary.js",
    "prepare": "husky",
    "install:api": "cd apps/api && poetry install",
    "lint:api": "cd apps/api && poetry run ruff check .",
    "test:api": "cd apps/api && poetry run pytest",
    "dev:api": "cd apps/api && poetry run uvicorn main:app --reload",
    "generate:api-client": "openapi-typescript-codegen --input http://localhost:8000/openapi.json --output packages/api-client/src --client axios",
    "build:chrome": "cd apps/chrome-extension && vite build && node scripts/zip-extension.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@google/generative-ai": "^0.24.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "^3.6.2",
    "prompts": "^2.4.2",
    "turbo": "^2.6.0",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix --max-warnings 0",
    "*.{ts,tsx,md}": "prettier --write"
  }
}
